<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.05"
    android:layout_marginTop="1dp"
    android:weightSum="1">
    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="灯光模拟"
        android:background="#D3D5D2"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:padding="3dp"
        android:textColor="#303030"
        android:layout_weight="1"
        android:id="@+id/list_1_1" />
    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="#D3D5D2"
        android:text="灯光模拟"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:padding="3dp"
        android:layout_weight="1"
        android:textColor="#303030"
        android:layout_toRightOf="@+id/list_1_1"
        android:id="@+id/list_1_2" />
    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="#D3D5D2"
        android:text="灯光模拟"
        android:textColor="#303030"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:padding="3dp"
        android:layout_weight="1"
        android:layout_toRightOf="@+id/list_1_2"
        android:id="@+id/list_1_3" />
    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:textColor="#303030"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="灯光模拟"
        android:background="#D3D5D2"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:padding="3dp"
        android:layout_weight="1"
        android:layout_toRightOf="@+id/list_1_3"
        android:id="@+id/list_1_4" />
</RelativeLayout>