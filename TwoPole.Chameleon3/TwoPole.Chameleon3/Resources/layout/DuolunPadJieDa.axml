<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:background="@android:color/holo_blue_bright">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="得分"
                android:id="@+id/textView2"
                android:gravity="center" />
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="100"
                android:id="@+id/tvScore"
                android:textColor="@android:color/holo_red_dark"
                android:gravity="center"
                android:background="#ffffff" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="考试地图"
                android:id="@+id/textView3"
                android:gravity="center" />
            <Spinner
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:id="@+id/MapSpiner"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="考试模式"
                android:id="@+id/textView31"
                android:gravity="center" />

            <Spinner
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:id="@+id/ExamModeSpinner"
                android:spinnerMode="dropdown"
                android:textSize="20dp"
                android:touchscreenBlocksFocus="false"
                android:transitionGroup="false"
                android:layout_weight="0.19" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:background="@android:color/holo_blue_bright">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="开始时间"
                android:id="@+id/textView21"
                android:gravity="center" />
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="00:00:00"
                android:id="@+id/tvStartTime"
                android:textColor="@android:color/holo_red_dark"
                android:gravity="center"
                android:background="#ffffff" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="用时"
                android:id="@+id/textView211"
                android:gravity="center" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="00:00:00"
                android:id="@+id/tvUseTime"
                android:textColor="@android:color/holo_red_dark"
                android:gravity="center"
                android:background="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="当前项目"
                android:id="@+id/textView311"

                android:gravity="center" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="上车准备"
                android:id="@+id/tvExamItem"
                android:textColor="@android:color/holo_red_dark"
                android:gravity="center"
                android:background="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:background="@android:color/holo_blue_bright">

        </LinearLayout>
        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="0.05"
                android:weightSum="1"
                android:layout_marginLeft="0dp"
                android:id="@+id/RuleBreakTable"
                android:layout_marginTop="0dp">
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:weightSum="1"
            android:background="@drawable/title2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="项目列表:"
                    android:id="@+id/tvShowMessage"
                    android:textColor="#FFFFFF"
                    android:layout_weight="0.03"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="速度：55"
                    android:id="@+id/tvSpeed"
                    android:layout_marginRight="5dp"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="转速：2000"
                    android:id="@+id/tvEngineRatio"
                    android:layout_marginRight="10dp"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="里程：2000"
                    android:id="@+id/tvMileage"
                    android:layout_marginRight="5dp"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/ExamItemTable"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1">
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:layout_weight="1"
                android:background="#99b4d1">

                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:text="开始考试"
                    android:id="@+id/mgViewStartExam"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ks"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="250dp" />

                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:text="返回主页"
                    android:layout_marginRight="15dp"
                    android:id="@+id/mgViewReturnHome"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/rg"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="250dp" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>

