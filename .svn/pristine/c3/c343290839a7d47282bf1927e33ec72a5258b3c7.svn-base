<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff7f5ed"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layouts"
        android:orientation="vertical">
        <include
            layout="@layout/header" />
        <TextView
            android:id="@+id/tips"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/grayslate"
            android:padding="5.0dip"
            android:text="温馨提示：需要速度和方向不能为零，点击项目自动打点"
            android:textColor="@color/white"
            android:textSize="20.0dip" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtTxtRoadName"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="路线名称"
            android:textColor="#ff4990cf"
            android:textSize="16.0dip"
            android:layout_gravity="center_horizontal" />
    <!--<TextView
            android:id="@+id/road_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="0.0dip"
            android:layout_weight="0.05"
            android:gravity="center"
            android:text="路线名称"
            android:textColor="#ff4990cf"
            android:textSize="16.0dip" />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.40"
                android:background="@color/white"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/btn_change_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_transparent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/roadmap_name"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="10.0dip"
                        android:layout_marginLeft="0.0dip"
                        android:layout_weight="1.0"
                        android:gravity="left"
                        android:singleLine="true"
                        android:text="项目"
                        android:textColor="#ff4990cf"
                        android:textSize="16.0dip" />
                    <LinearLayout
                        android:layout_width="40.0dip"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="10.0dip">
                        <ImageView
                            android:layout_width="21.0dip"
                            android:layout_height="21.0dip"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_change_line" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.0px"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginRight="5.0dip"
                    android:background="#fff7f5ed" />
                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="3.0dip">
                    <ListView
                        android:id="@+id/roadmap_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:cacheColorHint="#00000000"
                        android:divider="@color/whiteGray"
                        android:dividerHeight="1dip"
                        android:fadingEdge="none"
                        android:paddingTop="0.0dip" />
                </LinearLayout>
            </LinearLayout>
            <ScrollView
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="1.0dip"
                android:layout_weight="1.0"
                android:background="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_margin="10.0dip"
                            android:layout_marginLeft="0.0dip"
                            android:layout_weight="1.0"
                            android:gravity="left"
                            android:text="运行状态"
                            android:textColor="#ff4990cf"
                            android:textSize="16.0dip" />
                        <LinearLayout
                            android:id="@+id/btn_gps_check"
                            android:layout_width="50.0dip"
                            android:layout_height="match_parent"
                            android:background="@drawable/btn_transparent"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/icon_gps_blue"
                                android:layout_width="22.0dip"
                                android:layout_height="22.0dip"
                                android:src="@drawable/icon_gps_blue" />
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.0px"
                        android:layout_marginLeft="5.0dip"
                        android:layout_marginRight="5.0dip"
                        android:background="#fff7f5ed" />
                    <LinearLayout
                        android:id="@+id/road_gps"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="8.0dip">
                        <TextView
                            android:id="@+id/tvCarSignal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4.0dip"
                            android:gravity="left"
                            android:text="纬度:{0}进度{1} 卫星颗数{2}方向{3}速度{4}"
                            android:textColor="#ff4990cf"
                            android:textSize="14.0dip" />
                    </LinearLayout>
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <GridView
                                android:id="@+id/MapGridView"
                                android:layout_width="match_parent"
                                android:layout_height="600dp"
                                android:layout_marginLeft="1.0dip"
                                android:layout_marginRight="1.0dip"
                                android:gravity="center"
                                android:horizontalSpacing="1.0dip"
                                android:listSelector="@null"
                                android:numColumns="4"
                                android:stretchMode="columnWidth"
                                android:descendantFocusability="blocksDescendants"
                                android:verticalSpacing="1.0dip" />
                        </LinearLayout>
                    </ScrollView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.0px"
                        android:layout_marginLeft="5.0dip"
                        android:layout_marginRight="5.0dip"
                        android:background="#fff7f5ed" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>