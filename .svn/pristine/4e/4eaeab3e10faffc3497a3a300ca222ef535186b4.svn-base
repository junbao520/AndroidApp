<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F0F0F"
    android:orientation="vertical">
<!--上面部分-->
    <LinearLayout
        android:id="@+id/TopLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="311dp"
        android:orientation="horizontal">
    <!--左上方，android:background="#0F0F0F" 学员信息-->
        <LinearLayout
            android:id="@+id/LeftLinearLayout"
            android:layout_width="438dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#85CCFB"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:background="#0F0F0F"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:weightSum="3.1"
                android:layout_height="28dp">
                <TextView
                    android:id="@+id/tvSatelliteCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="22dp"
                    android:text="卫星：12"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:textColor="#EEDC82" />
                <TextView
                    android:id="@+id/tvEngineRpm"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="22dp"
                    android:text="转速：1122"
                    android:textAlignment="center"
                    android:layout_gravity="bottom"
                    android:textColor="#EEDC82" />
                <TextView
                    android:id="@+id/tvGear"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="22dp"
                    android:gravity="right"
                    android:text="档位：0"
                    android:layout_gravity="bottom"
                    android:textColor="#EEDC82" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="#0F0F0F"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent">
                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="122dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/lzhead" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ExamInfoLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="65dp"
                        android:orientation="vertical"
                        android:weightSum="2"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:textSize="22sp"
                            android:textColor="#EEDC82"
                            android:text="C1"
                            android:textAlignment="center"
                            android:textStyle="bold" />
                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"
                            android:src="@drawable/examTimeDay" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="1">
                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:text="姓名"
                            android:textColor="#0000ee"
                            android:textSize="22sp" />
                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="结果"
                            android:textColor="#0000ee"
                            android:textSize="22sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:text="张某某  341000000000001"
                            android:textColor="#EEDC82"
                            android:textSize="22sp" />
                        <TextView
                            android:id="@+id/tvScore"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="准备考试   100             00:00:00"
                            android:textColor="#EEDC82"
                            android:textSize="22sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/SpeedinfoLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:background="#0F0F0F"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvSpeedInfo"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:textColor="#EEDC82"
                        android:text="速度：0.0Km/h"
                        android:layout_marginTop="1dp" />
                    <TextView
                        android:id="@+id/tvAngleInfo"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:textColor="#EEDC82"
                        android:layout_marginLeft="40dp"
                        android:text="陀螺仪   ：180度"
                        android:layout_marginTop="1dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvDistanceInfo"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:textColor="#EEDC82"
                        android:text="里程：0.0m"
                        android:layout_marginTop="1dp" />
                    <TextView
                        android:id="@+id/tvGpsAngleInfo"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:textColor="#EEDC82"
                        android:layout_marginLeft="40dp"
                        android:text="Gps方向：180度"
                        android:layout_marginTop="1dp" />
                </LinearLayout>
                <TextView
                    android:id="@+id/tvMapInfo"
                    android:layout_width="match_parent"
                    android:visibility="invisible"
                    android:layout_height="0dp"
                    android:textSize="22sp"
                    android:textColor="#EEDC82"
                    android:text="线路：无地图"
                    android:layout_marginTop="0dp" />
            </LinearLayout>
        </LinearLayout>
    <!--右上方，项目信息-->
        <LinearLayout
            android:id="@+id/RightLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0F0F0F"
            android:orientation="vertical"
            android:weightSum="1">
        <!--学员信息，综合评判，人工评判等-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:weightSum="4"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnTrain"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="训练界面"
                    android:textSize="22dp"
                    android:textColor="#FFFF00"
                    android:background="@drawable/tab_bg_active"
                    android:layout_height="match_parent" />
                <Button
                    android:id="@+id/btnRengGong"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="人工评判"
                    android:textSize="22dp"
                    android:textColor="#FFFF00"
                    android:background="@drawable/tab_bg_active"
                    android:layout_height="match_parent" />
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="考生信息"
                    android:textSize="22dp"
                    android:textColor="#FFFF00"
                    android:background="@drawable/tab_bg_active"
                    android:layout_height="match_parent" />
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="综合评判"
                    android:textSize="22dp"
                    android:id="@+id/btnCommon"
                    android:textColor="#FFFF00"
                    android:background="@drawable/tab_bg_active"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ExamItemTable"
                android:layout_width="match_parent"
                android:layout_height="205dp"
                android:background="#85CCFB"
                android:orientation="vertical" />
            <LinearLayout
                android:id="@+id/ButtonTable"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:weightSum="5"
                android:layout_marginBottom="1dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnMapSelect"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="#318BD1"
                    android:textSize="22sp"
                    android:text="线路选择"
                    android:layout_marginRight="2dp" />
                <Button
                    android:id="@+id/btnModeSelect"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="#318BD1"
                    android:textSize="22sp"
                    android:text="模式选择"
                    android:layout_marginRight="2dp" />
                <Button
                    android:id="@+id/btnPrepareOk"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="#318BD1"
                    android:textSize="22sp"
                    android:text="准备就绪"
                    android:layout_marginRight="2dp" />
                <Button
                    android:id="@+id/btnStartExam"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="#318BD1"
                    android:textSize="22sp"
                    android:text="开始考试"
                    android:layout_marginRight="2dp" />
                <Button
                    android:id="@+id/btnReturnHome"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="#318BD1"
                    android:textSize="22sp"
                    android:text="退出考试"
                    android:layout_marginRight="2dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
<!--信号条部分-->
    <LinearLayout
        android:id="@+id/SensorLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#104E8B"
        android:orientation="horizontal">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:weightSum="13"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgEngine"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/luozhou_engine_off" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgSafety"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/luozhou_safety_belt_off" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgHandbreak"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/luozhou_hand_break_off" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgDoor"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/luozhou_door_off" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgClutch"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/luozhou_clutch_off" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgBrake"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/luozhou_brake_off" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgLoudspeaker"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/luozhou_loudspeaker_off" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgLeftlight"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/luozhou_left_light_off" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgRightlight"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/luozhou_right_light_off" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgOutline"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/luozhou_outline_light_off" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgLowBeam"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/luozhou_low_beam_off" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgHighBeam"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/luozhou_high_beam_off" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgFoglight"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/luozhou_fog_light_off" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
<!--扣分规则部分-->
    <LinearLayout
        android:id="@+id/ButtomLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#85CCFB"
        android:orientation="vertical">
        <ListView
            android:id="@+id/BrokenRule_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>